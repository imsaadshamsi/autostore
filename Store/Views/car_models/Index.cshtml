@model IEnumerable<Store.model>

@{
    ViewBag.Title = "Models List";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Model </h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-bordered">

                    <tr>
                        <th>
                            Car Name
                        </th>
                        <th>
                            Aliase Name
                        </th>
                        <th>
                            Year
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>                           
                            <td>
                                @Html.DisplayFor(modelItem => item.car.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.model_Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.model_Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.model_Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

